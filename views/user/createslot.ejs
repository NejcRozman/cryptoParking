<div class="card mx-auto text-white bg-primary mb-3" style="width: 28rem; padding: 15px">
  <form class="form-signin padding" >
    <h2>Creating a slot!</h2>

    <div class="form-group">
      <input placeholder="Coordinate X" name="coordinatex" id="x" type="text" class="form-control"/>
    </div>

    <div class="form-group">
      <input placeholder="Coordinate Y" name="coordinatey" id="y" type="text" class="form-control"/>
    </div>

    <br>
    <input type="button" value="Create" class="btn btn-lg btn-success btn-block" id="btnCreate"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    <br>
    <div class="form-group">
      <div class="alert alert-danger collapse" role="alert" id="noMeta1">
      <span>
      <h2>You need to have installed MetaMask to create or reserve slots!</h2>
        <p>You don't have it? <a class="active" href="https://metamask.io/">Get MetaMask!</a> </p>
      </span>
      </div>
      <div class="alert alert-danger collapse" role="alert" id="noMetaLog">
      <span>
      <h2>You need to be logged in MetaMask to create or reserve slots!</h2>
      </span>
      </div>
    </div>
  </form>
</div>
<div id="txStatus" style="color:white;"></div>
<% block('localScripts', '<script src="/js/createslot.js"></script>') %>
<div class="container collapse" style="padding-top: 20px" id="container">
  <div class="jumbotron bg-warning" id="jumbo">
  </div>
</div>

